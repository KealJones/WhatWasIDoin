{
  "name": "whatwasidoin",
  "displayName": "What was I doin'?",
  "description": "Get a summary of where you last left off in your git repository.",
  "publisher": "KealJones",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "vscode.git"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "What was I doin'?",
      "properties": {
        "whatwasidoin.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show a trigger button in the status bar."
        },
        "whatwasidoin.summaryLength": {
          "type": "number",
          "default": 900,
          "description": "The maximum length of the summary. Max allowed 900."
        }
      }
    },
    "commands": [
      {
        "command": "whatwasidoin.whatwasidoin",
        "title": "What was I doin'?"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write **.ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "openai": "^4.73.1",
    "simple-git": "^3.27.0"
  }
}
